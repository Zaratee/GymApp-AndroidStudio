<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutriologoSolicitudAlimentoLista"
    android:background="@color/backgroundcolor">

    <TextView
        android:id="@+id/txtvNoActionTitulo_NutriologoSolicitudAlimentoLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitudes de Alimento"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />
    <View
        android:id="@+id/view_NutriologoSolicitudAlimentoLista"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/lightgray2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtvNoActionTitulo_NutriologoSolicitudAlimentoLista"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listvSolicitudes_NutriologoSolicitudAlimentoLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_NutriologoSolicitudAlimentoLista"
        android:layout_marginTop="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingbtnAgregarAlimento_NutriologoSolicitudAlimentoLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />



</RelativeLayout>