<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgvUsuario_ClientePerfil"
        android:layout_width="83dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        app:civ_shadow="true"
        app:civ_shadow_radius="1"
        app:civ_shadow_color="@color/negro"
        app:civ_border_width="4dp"
        app:civ_border_color="#EEEE"
        android:src="@drawable/logonb"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_below="@+id/imgvUsuario_ClientePerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtvNombre_Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginLeft="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro: "
                android:textColor="#000"/>
            <TextView
                android:id="@+id/txtvRegistro_Perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>