<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructorCrearQueja">

    <TextView
        android:id="@+id/txtvTitulo_InstructorCrearQueja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Queja"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/lightgray2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtvTitulo_InstructorCrearQueja"/>


    <Button
        android:id="@+id/btnInvisible_InstructorCrearQueja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>



    <EditText
        android:id="@+id/etxtQueja_InstructorCrearQueja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:lines="6"
        android:gravity="top"
        android:hint="Escribir queja"
        android:background="@drawable/etxt_box"
        android:padding="10dp"
        android:textColorHint="@color/negro"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnEnviar_InstructorCrearQueja"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enviar"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_box"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"

        />



</RelativeLayout>