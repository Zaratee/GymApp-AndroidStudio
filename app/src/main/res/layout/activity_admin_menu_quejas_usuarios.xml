<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMenuQuejasUsuarios">

    <TextView
    android:id="@+id/txtvNoActionAgregar_AdminMenuQuejasUsuarios"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Quejas"
    android:textSize="30dp"
    android:textColor="#000"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    />
    <View
        android:id="@+id/view1__AdminMenuQuejasUsuarios"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/lightgray2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtvNoActionAgregar_AdminMenuQuejasUsuarios"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="false">

            <android.support.v7.widget.CardView
                android:id="@+id/cardvAgregarCliente_AdminMenuQuejasUsuarios"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circuloverde"
                        android:src="@drawable/ic_person_black_24dp"
                        android:padding="14dp"/>

                    <TextView
                        android:id="@+id/txtVCliente_AdminMenuQuejasUsuarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Cliente"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray"
                        android:layout_margin="7dp"/>
                    <TextView
                        android:id="@+id/txtvU1info_AdminMenuModificarUsuarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Quejas dadas por el Cliente"
                        android:padding="5dp"
                        android:textColor="@color/lightgray"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardvAgregarInstructor_AdminMenuQuejasUsuarios"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circulomorado"
                        android:src="@drawable/ic_fitness_center_black_24dp"
                        android:padding="14dp"/>

                    <TextView
                        android:id="@+id/txtvInstructor_AdminMenuQuejasUsuarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Instructor"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray"
                        android:layout_margin="7dp"/>

                    <TextView
                        android:id="@+id/txtvU2info_AdminMenuModificarUsuarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Quejas dadas por el Instructor"
                        android:padding="5dp"
                        android:textColor="@color/lightgray"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="false">

            <android.support.v7.widget.CardView
                android:id="@+id/cardvAgregarNutriologo_AdminMenuQuejasUsuarios"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circuloorojo"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:padding="14dp"/>

                    <TextView
                        android:id="@+id/txtvNutriologo_AdminMenuQuejasUsuarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Nutriologo"
                        android:layout_marginTop="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray"
                        android:layout_margin="7dp"/>

                    <TextView
                        android:id="@+id/txtvU3info_AdminMenuModificarUsuarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Quejas dadas por el NutriÃ³logo"
                        android:padding="5dp"
                        android:textColor="@color/lightgray"/>



                </LinearLayout>

            </android.support.v7.widget.CardView>





        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
