<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutriologoClienteAsignarComida">

    <TextView
        android:id="@+id/txtvTiempo_NutriologoClienteAsignarComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Tiempo"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnInvisible_NutriologoClienteAsignarComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/etxtAlimento_NutriologoClienteAsignarComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar"
        android:layout_below="@+id/txtvTiempo_NutriologoClienteAsignarComida"
        android:textColor="@color/negro"
        android:textColorHint="@color/negro"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:layout_alignEnd="@+id/btnBuscar_EliminarCliente"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnBuscarAlimento_NutriologoClienteAsignarComida"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_search_black_24dp"
        android:layout_below="@+id/txtvTiempo_NutriologoClienteAsignarComida"
        android:layout_marginTop="20dp"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/listvAlimentos_NutriologoClienteAsignarComida"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etxtAlimento_NutriologoClienteAsignarComida"
        android:layout_marginTop="20dp"/>


</RelativeLayout>