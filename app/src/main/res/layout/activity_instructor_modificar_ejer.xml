<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructorModificarEjer"
    android:background="@color/backgroundcolor">

    <TextView
        android:id="@+id/txtvDia_InstructorModificarEjer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dia"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />
    <View
        android:id="@+id/View_AsignarEjercicio"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/lightgray2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtvDia_InstructorModificarEjer"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/listvEjercicios_InstructorModificarEjer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/View_AsignarEjercicio"
        android:padding="18dp"/>




</RelativeLayout>