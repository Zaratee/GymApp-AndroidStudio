<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructorAsignarSeleccionarMusculo">

    <Button
        android:id="@+id/btnInvisible_InstructorAsignarSeleccionarMusculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtvDia_InstructorAsignarSeleccionarMusculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dia"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />
    <View
        android:id="@+id/view_InstructorAsignarSeleccionarMusculo"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/lightgray2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtvDia_InstructorAsignarSeleccionarMusculo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/view_InstructorAsignarSeleccionarMusculo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:id="@+id/btnBrazos_InstructorAsignarSeleccionarMusculo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/brazo"
                        android:layout_gravity="center" />





                </LinearLayout>
                <TextView
                    android:id="@+id/txtvBrazo_ClientePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Brazo y antebrazo"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#16000000"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/negro"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btnHombros_InstructorAsignarSeleccionarMusculo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hombros"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/txtvHombros_ClientePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Hombros"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#16000000"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/negro"/>


            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:id="@+id/btnEspalda_InstructorAsignarSeleccionarMusculo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:src="@drawable/espalda"
                        android:layout_gravity="center" />





                </LinearLayout>
                <TextView
                    android:id="@+id/txtvEspalda_ClientePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Espalda"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#16000000"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/negro"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btnPiernas_InstructorAsignarSeleccionarMusculo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pierna"
                        android:layout_gravity="center" />




                </LinearLayout>

                <TextView
                    android:id="@+id/txtvPiernas_ClientePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=" Piernas"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#16000000"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/negro"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:id="@+id/btnGluteos_InstructorAsignarSeleccionarMusculo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gluteos"
                        android:layout_gravity="center" />


                </LinearLayout>

                <TextView
                    android:id="@+id/txtvGluteos_ClientePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Glúteos"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#16000000"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/negro"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btnAbdominales_InstructorAsignarSeleccionarMusculo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/abdominales"
                        android:layout_gravity="center"/>





                </LinearLayout>
                <TextView
                    android:id="@+id/txtvCerrarSesion_ClientePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Abdominales"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#16000000"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/negro"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1"
            android:gravity="center">
            <android.support.v7.widget.CardView
                android:id="@+id/btnPectorales_InstructorAsignarSeleccionarMusculo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pectorales"
                        android:layout_gravity="center"/>





                </LinearLayout>

                <TextView
                    android:id="@+id/txtvActualizarContra_ClientePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Pectorales"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#16000000"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="@color/negro"/>

            </android.support.v7.widget.CardView>



        </LinearLayout>




    </LinearLayout>


</RelativeLayout>