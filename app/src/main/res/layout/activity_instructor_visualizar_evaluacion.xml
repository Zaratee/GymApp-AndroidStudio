<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructorVisualizarEvaluacion"
    android:background="@color/backgroundcolor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-80dp"/>
                <Button
                    android:id="@+id/btnInvisible_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/txtvNoActionTitulo_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encuesta"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    />

                <View
                    android:id="@+id/viewTitulo_InstructorVisualizarEvaluacion"
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txtvNoActionTitulo_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/lightgray2"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/txtvNoActionPruegunta1_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Tiene algún problema cardiovascular?"
                    android:layout_below="@+id/viewTitulo_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000" />
                <RadioGroup
                    android:id="@+id/radioGroupPregunta1_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtvNoActionPruegunta1_InstructorVisualizarEvaluacion"
                    android:layout_alignStart="@+id/txtvNoActionPruegunta1_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp">
                    <RadioButton
                        android:id="@+id/radioButtonSiPregunta1_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                    <RadioButton
                        android:id="@+id/radioButtonNoPregunta1_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="No"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/txtvNoActionPruegunta2_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Tiene algún problema en la musculatura?"
                    android:layout_below="@+id/radioGroupPregunta1_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000"/>
                <RadioGroup
                    android:id="@+id/radioGroupPregunta2_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtvNoActionPruegunta2_InstructorVisualizarEvaluacion"
                    android:layout_alignStart="@+id/txtvNoActionPruegunta1_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp">
                    <RadioButton
                        android:id="@+id/radioButtonSiPregunta2_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                    <RadioButton
                        android:id="@+id/radioButtonNoPregunta2_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="No"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/txtvNoActionPruegunta3_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Toma Algun Medicamento?"
                    android:layout_below="@+id/radioGroupPregunta2_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/radioGroupPregunta2_InstructorVisualizarEvaluacion"
                    android:textColor="#000"/>

                <RadioGroup
                    android:id="@+id/radioGroupPregunta3_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtvNoActionPruegunta3_InstructorVisualizarEvaluacion"
                    android:layout_alignStart="@+id/txtvNoActionPruegunta3_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp">
                    <RadioButton
                        android:id="@+id/radioButtonSiPregunta3_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                    <RadioButton
                        android:id="@+id/radioButtonNoPregunta3_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="No"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/txtvMedicamentoNombre_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_toRightOf="@+id/radioGroupPregunta3_InstructorVisualizarEvaluacion"
                    android:layout_below="@+id/txtvNoActionPruegunta3_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/designCualMedicamento_InstructorVisualizarEvaluacion"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtvNoActionPruegunta3_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="12dp"
                    android:visibility="invisible"
                    android:layout_alignStart="@+id/spinnerTabaco_InstructorVisualizarEvaluacion"
                    android:textColor="#000"
                    android:textColorHint="#000">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etxtCualMedicamento_InstructorVisualizarEvaluacion"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="¿Cual?"
                        android:inputType="text"
                        android:visibility="invisible"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:enabled="false"
                        />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/txtvNoActionPruegunta4_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Consume tabaco?"
                    android:layout_below="@+id/radioGroupPregunta3_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/radioGroupPregunta3_InstructorVisualizarEvaluacion"
                    android:textColor="#000"/>
                <RadioGroup
                    android:id="@+id/radioGroupPregunta4_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtvNoActionPruegunta4_InstructorVisualizarEvaluacion"
                    android:layout_alignStart="@+id/txtvNoActionPruegunta4_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp">
                    <RadioButton
                        android:id="@+id/radioButtonSiPregunta4_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                    <RadioButton
                        android:id="@+id/radioButtonNoPregunta4_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="No"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/txtvTiempoTabaco_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_toRightOf="@+id/radioGroupPregunta4_InstructorVisualizarEvaluacion"
                    android:layout_below="@+id/txtvNoActionPruegunta4_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtvNoActionPruegunta5_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Consume Alcohol?"
                    android:layout_below="@+id/radioGroupPregunta4_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/radioGroupPregunta3_InstructorVisualizarEvaluacion"
                    android:textColor="#000"/>
                <RadioGroup
                    android:id="@+id/radioGroupPregunta5_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtvNoActionPruegunta5_InstructorVisualizarEvaluacion"
                    android:layout_alignStart="@+id/txtvNoActionPruegunta4_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp">
                    <RadioButton
                        android:id="@+id/radioButtonSiPregunta5_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                    <RadioButton
                        android:id="@+id/radioButtonNoPregunta5_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="No"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/txtvTiempoAlcohol_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_toRightOf="@+id/radioGroupPregunta5_InstructorVisualizarEvaluacion"
                    android:layout_below="@+id/txtvNoActionPruegunta5_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtvNoActionPruegunta6_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Ha realizado actividad fisica ultimamente?"
                    android:layout_below="@+id/radioGroupPregunta5_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/radioGroupPregunta3_InstructorVisualizarEvaluacion"
                    android:textColor="#000"/>
                <RadioGroup
                    android:id="@+id/radioGroupPregunta6_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtvNoActionPruegunta6_InstructorVisualizarEvaluacion"
                    android:layout_alignStart="@+id/txtvNoActionPruegunta4_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp">
                    <RadioButton
                        android:id="@+id/radioButtonSiPregunta6_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                    <RadioButton
                        android:id="@+id/radioButtonNoPregunta6_InstructorVisualizarEvaluacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="No"
                        android:textColor="#000"
                        android:button="@drawable/radiobutton"
                        android:paddingLeft="5dp"
                        android:enabled="false"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/txtvNoActionPruegunta7_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresar los siguientes datos:"
                    android:layout_below="@+id/radioGroupPregunta6_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/radioGroupPregunta3_InstructorVisualizarEvaluacion"
                    android:textColor="#000"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/designEdad_InstructorVisualizarEvaluacion"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtvNoActionPruegunta7_InstructorVisualizarEvaluacion"
                    android:layout_alignStart="@+id/txtvNoActionPruegunta7_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="12dp"
                    android:textColor="#000"
                    android:textColorHint="#000">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etxtEdad_InstructorVisualizarEvaluacion"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="Edad"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:backgroundTint="#000"
                        android:textSize="14dp"
                        android:cursorVisible="false"
                        android:maxLength="2"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/designPeso_InstructorVisualizarEvaluacion"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtvNoActionPruegunta7_InstructorVisualizarEvaluacion"
                    android:layout_toRightOf="@+id/designEdad_InstructorVisualizarEvaluacion"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"
                    android:textColorHint="#000">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etxtPeso_InstructorVisualizarEvaluacion"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="Peso(Kg)"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:backgroundTint="#000"
                        android:textSize="14dp"
                        android:maxLength="3"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/designTalla_InstructorVisualizarEvaluacion"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/designEdad_InstructorVisualizarEvaluacion"
                    android:layout_alignStart="@+id/txtvNoActionPruegunta7_InstructorVisualizarEvaluacion"
                    android:layout_marginTop="12dp"
                    android:textColorHint="#000">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etxtTalla_InstructorVisualizarEvaluacion"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="Estatura(cm)"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:backgroundTint="#000"
                        android:textSize="14dp"
                        android:maxLength="3"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/designMasa_InstructorVisualizarEvaluacion"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/designEdad_InstructorVisualizarEvaluacion"
                    android:layout_toRightOf="@+id/designEdad_InstructorVisualizarEvaluacion"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="12dp"
                    android:textColorHint="#000"
                    android:layout_alignBaseline="@+id/designTalla_InstructorVisualizarEvaluacion">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etxtMasa_InstructorVisualizarEvaluacion"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="Grasa(%)"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:backgroundTint="#000"
                        android:textSize="14dp"
                        android:maxLength="2"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/txtvNoActionCodigo_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código:"
                    android:textColor="#000"
                    android:layout_below="@+id/designTalla_InstructorVisualizarEvaluacion"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/txtvCodigo_InstructorVisualizarEvaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000"
                    android:textColor="#000"
                    android:textSize="40dp"
                    android:layout_below="@+id/txtvNoActionCodigo_InstructorVisualizarEvaluacion"
                    android:layout_centerHorizontal="true"
                    />
                <Button
                    android:id="@+id/btnContinuar_InstructorVisualizarEvaluacion"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Continuar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/txtvCodigo_InstructorVisualizarEvaluacion"
                    android:background="@drawable/btn_box"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnContinuar_EncuestaCliente"
                    android:visibility="invisible" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
