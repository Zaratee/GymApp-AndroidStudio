<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructorPerfil"
    android:background="@color/backgroundcolor">

    <LinearLayout
        android:id="@+id/layFotoUsuario_InstructorPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:background="@color/backgroundcolor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgvUsuario_InstructorPerfil"
                    android:layout_width="83dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="1"
                    app:civ_shadow_color="@color/negro"
                    app:civ_border_width="4dp"
                    app:civ_border_color="#EEEE"
                    android:src="@drawable/logonb" />

            </LinearLayout>
            <View
                android:id="@+id/view_InstructorPerfil"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listvClientes_InstructorPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layFotoUsuario_InstructorPerfil"/>


</RelativeLayout>