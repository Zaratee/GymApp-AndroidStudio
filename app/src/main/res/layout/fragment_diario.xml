<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightgray">

            <LinearLayout
                android:id="@+id/layoutValores_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/txtvNoActionGrasas_FragmentDiario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grasas"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/txtvGrasas_FragmentDiario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/txtvNoActionCarbh_FragmentDiario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbohidratos"
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/txtvCarbh_FragmentDiario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/txtvNoActionProt_FragmentDiario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proteinas"
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/txtvProt_FragmentDiario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/txtvNoActionCalorias_FragmentDiario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calorias"
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/txtvCalorias_FragmentDiario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgvDesayuno_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/layoutValores_FragmentDiario"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="@color/lightgray"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/layoutValores_FragmentDiario"
                android:layout_marginTop="30dp"
                android:background="#000"/>
            <Button
                android:id="@+id/btnAgregarDesayuno_FragmentDiario"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_below="@+id/layoutValores_FragmentDiario"
                android:layout_alignStart="@+id/imgvDesayuno_FragmentDiario"
                android:layout_marginTop="35dp"
                />

            <TextView
                android:id="@+id/txtvNoActionDesayuno_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desayuno"
                android:layout_below="@+id/layoutValores_FragmentDiario"
                android:layout_toRightOf="@+id/btnAgregarDesayuno_FragmentDiario"
                android:textSize="27dp"
                android:textColor="#fff"
                android:layout_marginTop="30dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtvTotalCaloriasDesayuno_FragmentDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/layoutValores_FragmentDiario"
                android:textSize="22dp"
                android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="33dp"
                android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:id="@+id/listvDesayuno_FragmentDiario"
                android:layout_below="@+id/txtvNoActionDesayuno_FragmentDiario"
                android:layout_alignStart="@+id/imgvDesayuno_FragmentDiario"
                android:layout_alignBottom="@+id/imgvDesayuno_FragmentDiario"
                />

            <ImageView
                android:id="@+id/imgvAlmuerzo_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/imgvDesayuno_FragmentDiario"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="@color/lightgray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgvDesayuno_FragmentDiario"
                android:background="#000"/>

            <Button
                android:id="@+id/btnAgregarAlmuerzo_FragmentDiario"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_below="@+id/imgvDesayuno_FragmentDiario"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/txtvNoActionALmuerzo_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Almuerzo"
                android:layout_below="@+id/imgvDesayuno_FragmentDiario"
                android:layout_toRightOf="@+id/btnAgregarDesayuno_FragmentDiario"
                android:textSize="27dp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtvTotalCaloriasALmuerzo_FragmentDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/imgvDesayuno_FragmentDiario"
                android:textSize="22dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:gravity="center"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listvAlmuerzo_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/txtvNoActionALmuerzo_FragmentDiario"
                android:layout_alignBottom="@+id/imgvAlmuerzo_FragmentDiario" />

            <ImageView
                android:id="@+id/imgvCena_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/imgvAlmuerzo_FragmentDiario"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="@color/lightgray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgvAlmuerzo_FragmentDiario"
                android:layout_alignStart="@+id/imgvDesayuno_FragmentDiario"
                android:background="#000000"/>

            <Button
                android:id="@+id/btnAgregarCena_FragmentDiario"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_below="@+id/imgvAlmuerzo_FragmentDiario"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/txtvNoActionCena_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cena"
                android:layout_below="@+id/imgvAlmuerzo_FragmentDiario"
                android:layout_toRightOf="@+id/btnAgregarDesayuno_FragmentDiario"
                android:textSize="27dp"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/txtvTotalCaloriasCena_FragmentDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/imgvAlmuerzo_FragmentDiario"
                android:textSize="22dp"
                android:textColor="#fff"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listvCena_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/txtvNoActionCena_FragmentDiario"
                android:layout_alignBottom="@+id/imgvCena_FragmentDiario" />

            <ImageView
                android:id="@+id/imgvPasabocas_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/imgvCena_FragmentDiario"
                android:layout_centerHorizontal="true"
                android:background="@color/lightgray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgvCena_FragmentDiario"
                android:background="#000"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgvPasabocas_FragmentDiario"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btnAgregarPasabocas_FragmentDiario"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_below="@+id/imgvCena_FragmentDiario"
                android:layout_alignStart="@+id/imgvPasabocas_FragmentDiario"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/txtvNoActionPasabocas_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasabocas/otros"
                android:gravity="center"
                android:layout_below="@+id/imgvCena_FragmentDiario"
                android:layout_toRightOf="@+id/btnAgregarDesayuno_FragmentDiario"
                android:textSize="27dp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/txtvTotalCaloriasPasabocas_FragmentDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/imgvCena_FragmentDiario"
                android:textSize="22dp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listvPasabocas_FragmentDiario"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/txtvNoActionPasabocas_FragmentDiario"
                android:layout_alignStart="@+id/imgvPasabocas_FragmentDiario"
                android:layout_alignBottom="@+id/imgvPasabocas_FragmentDiario" />

            <Button
                android:id="@+id/btnEditarDieta_FragmentDiario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Editar dieta"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/listvPasabocas_FragmentDiario"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_box"
                android:textColor="#000"
                android:textSize="17dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Editar dieta"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnEditarDieta_FragmentDiario"
                android:background="@drawable/btn_box"
                android:textColor="#000"
                android:textSize="17dp"
                android:visibility="invisible"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>