<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/backgroundcolor">

    <Button
        android:id="@+id/btnCentro_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/imgvLogo_loginActivity"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_below="@+id/btnCentro_loginActivity"
        android:background="@drawable/logonb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-270dp"/>




    <android.support.design.widget.TextInputLayout
        android:id="@+id/designUsuario_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgvLogo_loginActivity"
        android:layout_marginTop="20dp"
        android:textColorHint="#000">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etxtUsuario_loginActivity"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Registro"
            android:inputType="number"
            android:textColor="#000"
            android:textColorHint="#000"
            android:backgroundTint="#000"
            android:background="@drawable/apptheme_textfield_activated_holo_light"
            android:maxLength="4" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/designContraseña_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/designUsuario_loginActivity"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/designUsuario_loginActivity"
        app:passwordToggleEnabled="true"
        android:textColorHint="#000"
        app:passwordToggleTint="#000">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etxtContraseña_loginActivity"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/contrase_a"
            android:inputType="textPassword"
            android:textColorHint="#000"
            android:backgroundTint="#000"
            android:textColor="#000"
            android:background="@drawable/apptheme_textfield_activated_holo_light"/>

    </android.support.design.widget.TextInputLayout>
    <CheckBox
        android:id="@+id/chkboxMantenerSesion_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/designContraseña_loginActivity"
        android:layout_alignStart="@+id/designContraseña_loginActivity"
        android:text="Mantener sesión iniciada"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textColorHighlight="#000"
        android:textColorLink="#000"
        android:textColorHint="#000"
        android:backgroundTint="#000"
        android:button="@drawable/checkbox"
        android:paddingLeft="5dp"/>


    <TextView
        android:id="@+id/txtvContra_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste la contraseña?"
        android:layout_alignStart="@+id/chkboxMantenerSesion_loginActivity"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/chkboxMantenerSesion_loginActivity"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/txtvObteninf_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chkboxMantenerSesion_loginActivity"
        android:layout_below="@id/txtvContra_loginActivity"
        android:textColor="#000"
        android:text="Obtener informacion"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnIngresar_loginActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtvObteninf_loginActivity"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_box"
        android:textColor="#000"
        android:textSize="17dp"/>


</RelativeLayout>