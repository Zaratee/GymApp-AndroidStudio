<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundcolor">


    <LinearLayout
        android:id="@+id/layFotoUsuario_PerfilInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgvUsuario_PerfilInstructor"
                    android:layout_width="83dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="1"
                    app:civ_shadow_color="@color/negro"
                    app:civ_border_width="4dp"
                    app:civ_border_color="#EEEE"
                    android:src="@drawable/logonb" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/txtvNoActionNombre_PerfilInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="12dp"
        android:textColor="#000"
        android:layout_below="@+id/layFotoUsuario_PerfilInstructor"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtvNombre_PerfilInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre "
        android:layout_below="@+id/txtvNoActionNombre_PerfilInstructor"
        android:layout_alignStart="@+id/txtvNoActionNombre_PerfilInstructor"
        android:textSize="16dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/txtvApellido_PerfilInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:layout_below="@+id/txtvNoActionNombre_PerfilInstructor"
        android:textSize="16dp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/txtvNombre_PerfilInstructor"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:id="@+id/txtvNoActionRegistro_PerfilInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro:"
        android:textSize="12dp"
        android:textColor="#000"
        android:layout_below="@+id/txtvNombre_PerfilInstructor"
        android:layout_alignStart="@+id/txtvNombre_PerfilInstructor"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/txtvRegistro_PerfilInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000 "
        android:layout_below="@+id/txtvNoActionRegistro_PerfilInstructor"
        android:layout_alignStart="@+id/txtvNoActionRegistro_PerfilInstructor"
        android:textSize="16dp"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtvRegistro_PerfilInstructor"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:id="@+id/cardvActualizarContra_PerfilInstructor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtvActualizarContra_PerfilInstructor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Actualizar contraseÃ±a"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"/>



                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardvQuejas_PerfilInstructor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtvQuejas_PerfilInstructor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Quejas"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"/>



                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/cardvCerrarSesion_PerfilInstructor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtvCerrarSesion_PerfilInstructor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Cerrar Sesion"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>