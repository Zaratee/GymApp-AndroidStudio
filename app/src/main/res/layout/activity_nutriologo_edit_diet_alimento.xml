<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutriologoEditDietAlimento"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/txtvAlimentoNombre_NutriologoEditDietAlimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray2"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca:"
                            android:textColor="#000"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca:"
                            android:textSize="16dp"
                            android:visibility="invisible"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtvMarca_NutriologoEditDietAlimento"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo:"
                            android:textColor="#000"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo:"
                            android:textSize="16dp"
                            android:visibility="invisible"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtvTipo_NutriologoEditDietAlimento"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carboh:"
                            android:textColor="#000"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca:"
                            android:textSize="16dp"
                            android:visibility="invisible"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtvCarbh_NutriologoEditDietAlimento"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grasas:"
                            android:textColor="#000"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16dp"
                            android:visibility="invisible"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtvGrasas_NutriologoEditDietAlimento"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proteinas:"
                            android:textColor="#000"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca:"
                            android:textSize="16dp"
                            android:visibility="invisible"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtvProteinas_NutriologoEditDietAlimento"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calorias:"
                            android:textColor="#000"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16dp"
                            android:visibility="invisible"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtvCalorias_NutriologoEditDietAlimento"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/designCantidad_NutriologoEditDietAlimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColorHint="#000"
            android:gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etxtCantidad_NutriologoEditDietAlimento"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Cantidad"
                android:inputType="number"
                android:textColor="#000"
                android:textColorHint="#000"
                android:backgroundTint="#000"
                android:background="@drawable/apptheme_textfield_activated_holo_light"
                android:maxLength="4" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/txtvMedida_NutriologoEditDietAlimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medida"
            android:textSize="20dp"
            android:layout_gravity="bottom"
            android:textColor="#000"/>
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

                <RadioButton
                    android:id="@+id/radiobtnDesayuno_NutriologoEditDietAlimento"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:textColorHighlight="#000"
                    android:textColorLink="#000"
                    android:textColorHint="#000"
                    android:backgroundTint="#000"
                    android:button="@drawable/radiobutton"
                    android:layout_height="wrap_content"
                    android:text="Desayuno" />
                <RadioButton
                    android:id="@+id/radiobtnAlmuerzo_NutriologoEditDietAlimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textColorHighlight="#000"
                    android:textColorLink="#000"
                    android:textColorHint="#000"
                    android:backgroundTint="#000"
                    android:button="@drawable/radiobutton"
                    android:text="Almuerzo"
                    />

                <RadioButton
                    android:id="@+id/radiobtnCena_NutriologoEditDietAlimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textColorHighlight="#000"
                    android:textColorLink="#000"
                    android:textColorHint="#000"
                    android:backgroundTint="#000"
                    android:button="@drawable/radiobutton"
                    android:text="Cena" />
                <RadioButton
                    android:id="@+id/radiobtnPasabocas_NutriologoEditDietAlimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textColorHighlight="#000"
                    android:textColorLink="#000"
                    android:textColorHint="#000"
                    android:backgroundTint="#000"
                    android:button="@drawable/radiobutton"
                    android:text="PasaBocas" />
    </RadioGroup>

    <Button
        android:id="@+id/btnEditar_NutriologoEditDietAlimento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_box"
        android:textColor="#000"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/btnEliminar_NutriologoEditDietAlimento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_box"
        android:textColor="#000"
        android:textSize="17dp"/>

</LinearLayout>

