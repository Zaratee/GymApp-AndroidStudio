<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClienteAlimentacion"
    android:background="@color/lightgray">

    <FrameLayout
        android:id="@+id/fragmentcontenedor_ClienteAlimentacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_ClienteAlimentacion" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/menu_ClienteAlimentacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingbtnAgregar_ClienteAlimentacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_above="@+id/menu_ClienteAlimentacion"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingbtnChat_ClienteAlimentacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat_white_24dp"
        android:layout_above="@+id/menu_ClienteAlimentacion"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp" />


</RelativeLayout>